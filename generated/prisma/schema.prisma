  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

// ============================================================================
// User & Authentication Models
// ============================================================================

enum UserRole {
  STUDENT
  LECTURER
  ADMIN
}

enum AccountStatus {
  ACTIVE
  INVITED
  SUSPENDED
  DELETED
}

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String        @unique
  emailVerified DateTime?
  image         String?
  password      String? // For credentials auth
  role          UserRole      @default(STUDENT)
  status        AccountStatus @default(ACTIVE)
  inviteToken   String?       @unique
  inviteExpires DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  accounts              Account[]
  sessions              Session[]
  courses               CourseEnrollment[]
  submissions           Submission[] // Legacy submissions
  assignmentSubmissions AssignmentSubmission[] // New assignment submissions
  auditLogs             AuditLog[]
  notifications         Notification[]
  files                 UploadedFile[]
  lecturerCourses       CourseLecturer[] // Courses where this user is a lecturer

  @@index([email])
  @@index([role])
  @@index([status])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================================================
// Course Models
// ============================================================================

enum CourseStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum LessonType {
  VIDEO
  READING
  QUIZ
  ASSIGNMENT
}

model Course {
  id          String       @id @default(cuid())
  title       String
  description String?      @db.Text
  thumbnail   String? // R2 file key
  status      CourseStatus @default(DRAFT)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  enrollments CourseEnrollment[]
  modules     Module[]
  lecturers   CourseLecturer[] // Many-to-many relationship with lecturers

  @@index([status])
}

// Many-to-many relationship between Course and Lecturers
model CourseLecturer {
  id         String   @id @default(cuid())
  courseId   String
  lecturerId String
  assignedAt DateTime @default(now())
  assignedBy String? // Admin who assigned the lecturer

  // Relations
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lecturer User   @relation(fields: [lecturerId], references: [id], onDelete: Cascade)

  @@unique([courseId, lecturerId])
  @@index([courseId])
  @@index([lecturerId])
}

model Module {
  id          String   @id @default(cuid())
  courseId    String
  title       String
  description String?  @db.Text
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  course  Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons Lesson[]

  @@index([courseId])
  @@index([order])
}

model Lesson {
  id          String     @id @default(cuid())
  moduleId    String
  title       String
  description String?    @db.Text
  type        LessonType @default(VIDEO)
  duration    Int? // Duration in seconds
  videoUrl    String? // R2 file key or external URL
  order       Int
  isPublished Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  module      Module           @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  resources   LessonResource[]
  quiz        Quiz?
  submissions Submission[] // Legacy lesson submissions (keep for backward compatibility)
  assignments Assignment[] // New assignments feature
  progress    LessonProgress[]

  @@index([moduleId])
  @@index([order])
  @@index([type])
}

enum ResourceType {
  FILE // Uploaded file to R2
  EXTERNAL_LINK // External URL
  EMBEDDED // Embedded content (YouTube, etc.)
  TEXT_NOTE // Rich text note
}

enum AssetVisibility {
  PUBLIC // Visible to all enrolled students
  SCHEDULED // Visible after a specific date
  HIDDEN // Hidden from students
}

model LessonResource {
  id          String       @id @default(cuid())
  lessonId    String
  title       String
  description String?
  type        ResourceType @default(FILE)

  // File storage (R2)
  fileKey  String? // R2 file key
  fileName String?
  fileSize Int?
  mimeType String?

  // External/Embedded
  externalUrl String?
  embedCode   String? @db.Text

  // Text note
  textContent String? @db.Text

  // Metadata
  version      Int             @default(1)
  isLatest     Boolean         @default(true)
  visibility   AssetVisibility @default(PUBLIC)
  scheduledAt  DateTime?
  downloadable Boolean         @default(true)
  tags         String[]

  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  lesson   Lesson            @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  versions ResourceVersion[]

  @@index([lessonId])
  @@index([type])
  @@index([visibility])
}

// Asset version history - don't overwrite, create new versions
model ResourceVersion {
  id         String   @id @default(cuid())
  resourceId String
  version    Int
  fileKey    String? // R2 file key for this version
  fileName   String?
  fileSize   Int?
  mimeType   String?
  uploadedBy String? // User ID who uploaded this version
  createdAt  DateTime @default(now())

  // Relations
  resource LessonResource @relation(fields: [resourceId], references: [id], onDelete: Cascade)

  @@unique([resourceId, version])
  @@index([resourceId])
}

// Quiz system
enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  SHORT_ANSWER
  LONG_ANSWER
}

model Quiz {
  id               String   @id @default(cuid())
  lessonId         String   @unique
  title            String
  description      String?  @db.Text
  timeLimit        Int? // In minutes
  passingScore     Int      @default(70) // Percentage
  maxAttempts      Int? // null = unlimited
  shuffleQuestions Boolean  @default(false)
  shuffleAnswers   Boolean  @default(false)
  showResults      Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  lesson    Lesson         @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  questions QuizQuestion[]
  attempts  QuizAttempt[]
}

model QuizQuestion {
  id          String       @id @default(cuid())
  quizId      String
  type        QuestionType
  question    String       @db.Text
  explanation String?      @db.Text
  points      Int          @default(1)
  order       Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  quiz      Quiz           @relation(fields: [quizId], references: [id], onDelete: Cascade)
  answers   QuizAnswer[]
  responses QuizResponse[]

  @@index([quizId])
}

model QuizAnswer {
  id         String   @id @default(cuid())
  questionId String
  answer     String   @db.Text
  isCorrect  Boolean  @default(false)
  order      Int
  createdAt  DateTime @default(now())

  // Relations
  question QuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([questionId])
}

enum AttemptStatus {
  IN_PROGRESS
  SUBMITTED
  GRADED
}

model QuizAttempt {
  id            String        @id @default(cuid())
  quizId        String
  userId        String
  attemptNumber Int
  status        AttemptStatus @default(IN_PROGRESS)
  score         Float?
  maxScore      Float?
  percentage    Float?
  startedAt     DateTime      @default(now())
  submittedAt   DateTime?
  gradedAt      DateTime?

  // Relations
  quiz      Quiz           @relation(fields: [quizId], references: [id], onDelete: Cascade)
  responses QuizResponse[]

  @@unique([quizId, userId, attemptNumber])
  @@index([quizId])
  @@index([userId])
}

model QuizResponse {
  id         String   @id @default(cuid())
  attemptId  String
  questionId String
  answer     String?  @db.Text
  isCorrect  Boolean?
  points     Float?
  createdAt  DateTime @default(now())

  // Relations
  attempt  QuizAttempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  question QuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([attemptId])
  @@index([questionId])
}

// ============================================================================
// Enrollment & Progress Models
// ============================================================================

enum EnrollmentStatus {
  ACTIVE
  COMPLETED
  DROPPED
}

model CourseEnrollment {
  id             String           @id @default(cuid())
  userId         String
  courseId       String
  status         EnrollmentStatus @default(ACTIVE)
  progress       Float            @default(0) // 0-100
  enrolledAt     DateTime         @default(now())
  completedAt    DateTime?
  lastAccessedAt DateTime?

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

model LessonProgress {
  id             String   @id @default(cuid())
  userId         String
  lessonId       String
  completed      Boolean  @default(false)
  watchedSeconds Int      @default(0)
  lastAccessedAt DateTime @default(now())

  // Relations
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@index([userId])
  @@index([lessonId])
}

// ============================================================================
// Assignment Models
// ============================================================================

model Assignment {
  id                  String   @id @default(cuid())
  lessonId            String
  title               String
  description         String?  @db.Text
  instructions        String?  @db.Text
  dueDate             DateTime
  maxPoints           Int      @default(100)
  allowedFileTypes    String[] // e.g., ["pdf", "docx", "jpg"]
  maxFileSize         Int      @default(10485760) // 10MB in bytes
  maxFiles            Int      @default(5)
  allowLateSubmission Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  lesson                Lesson                 @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  assignmentSubmissions AssignmentSubmission[]

  @@index([lessonId])
  @@index([dueDate])
}

enum SubmissionStatus {
  DRAFT
  SUBMITTED
  GRADED
  RETURNED
}

// Keep old Submission model UNTOUCHED for backward compatibility
model Submission {
  id          String           @id @default(cuid())
  lessonId    String // KEEP lessonId - don't break existing data!
  userId      String
  content     String?          @db.Text
  status      SubmissionStatus @default(DRAFT)
  grade       Int?
  feedback    String?          @db.Text
  submittedAt DateTime?
  gradedAt    DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // Relations - PRESERVED for existing data
  lesson      Lesson                 @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  user        User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  attachments SubmissionAttachment[]

  @@unique([lessonId, userId])
  @@index([userId])
  @@index([lessonId])
  @@index([status])
}

// Legacy submission attachments (R2 storage) - KEEP UNTOUCHED
model SubmissionAttachment {
  id           String   @id @default(cuid())
  submissionId String
  fileKey      String // R2 file key
  fileName     String
  fileSize     Int
  mimeType     String
  createdAt    DateTime @default(now())

  // Relations
  submission Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([submissionId])
}

// NEW: Assignment submission model (uses B2 storage)
model AssignmentSubmission {
  id           String           @id @default(cuid())
  assignmentId String
  userId       String
  content      String?          @db.Text
  status       SubmissionStatus @default(DRAFT)
  grade        Int?
  maxGrade     Int?
  feedback     String?          @db.Text
  submittedAt  DateTime?
  gradedAt     DateTime?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  // Relations
  assignment  Assignment                       @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  user        User                             @relation(fields: [userId], references: [id], onDelete: Cascade)
  attachments AssignmentSubmissionAttachment[]

  @@unique([assignmentId, userId])
  @@index([userId])
  @@index([assignmentId])
  @@index([status])
}

// NEW: Assignment submission attachments (B2 storage)
model AssignmentSubmissionAttachment {
  id           String   @id @default(cuid())
  submissionId String
  fileKey      String // B2 file key
  fileId       String // B2 file ID for deletion
  fileName     String
  fileSize     Int
  mimeType     String
  createdAt    DateTime @default(now())

  // Relations
  submission AssignmentSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([submissionId])
}

// ============================================================================
// File Storage Models
// ============================================================================

enum FileType {
  PROFILE_IMAGE
  COURSE_THUMBNAIL
  LESSON_VIDEO
  LESSON_RESOURCE
  SUBMISSION_ATTACHMENT
  DOCUMENT
  OTHER
}

model UploadedFile {
  id        String   @id @default(cuid())
  userId    String
  fileKey   String   @unique // R2 file key
  fileName  String
  fileSize  Int
  mimeType  String
  fileType  FileType
  checksum  String? // SHA-256 for integrity verification
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([fileType])
  @@index([fileKey])
}

// ============================================================================
// Notification Models
// ============================================================================

enum NotificationType {
  COURSE_ENROLLMENT
  LESSON_PUBLISHED
  ASSIGNMENT_GRADED
  ANNOUNCEMENT
  SYSTEM
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String           @db.Text
  link      String?
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([createdAt])
}

// ============================================================================
// Audit Log Models
// ============================================================================

enum AuditAction {
  // User actions
  USER_CREATED
  USER_INVITED
  USER_UPDATED
  USER_DELETED
  USER_LOGIN
  USER_LOGOUT
  PASSWORD_RESET_REQUESTED

  // Course actions
  COURSE_CREATED
  COURSE_UPDATED
  COURSE_DELETED
  COURSE_PUBLISHED

  // Enrollment actions
  ENROLLMENT_CREATED
  ENROLLMENT_UPDATED
  ENROLLMENT_DELETED

  // Content actions
  LESSON_CREATED
  LESSON_UPDATED
  LESSON_DELETED
  LESSON_PUBLISHED

  // Submission actions
  SUBMISSION_CREATED
  SUBMISSION_UPDATED
  SUBMISSION_GRADED

  // Assignment actions
  ASSIGNMENT_CREATED
  ASSIGNMENT_UPDATED
  ASSIGNMENT_DELETED
  ASSIGNMENT_SUBMITTED
  ASSIGNMENT_GRADED

  // File actions
  FILE_UPLOADED
  FILE_DOWNLOADED
  FILE_DELETED

  // Email actions
  EMAIL_SENT
  EMAIL_FAILED

  // System actions
  SYSTEM_ERROR
  SYSTEM_WARNING
}

model AuditLog {
  id         String      @id @default(cuid())
  userId     String? // null for system actions
  action     AuditAction
  entityType String // e.g., "Course", "User", "Lesson"
  entityId   String? // ID of the affected entity
  metadata   Json? // Additional context
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime    @default(now())

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([entityType, entityId])
  @@index([createdAt])
}
